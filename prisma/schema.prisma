generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GovernmentRecord {
  id             String   @id @default(uuid())
  fullName       String
  dateOfBirth    String
  documentNumber String   @unique
  address        String
  photoUrl       String
  createdAt      DateTime @default(now())
  users          User?
}

model User {
  id                    String           @id @default(uuid())
  email                 String           @unique
  passwordHash          String
  fullName              String
  documentNumber        String           @unique
  faceImageUrl          String?
  verified              Boolean          @default(false)
  isAdmin               Boolean          @default(false)
  registeredAt          DateTime         @default(now())
  faceDescriptor        String?
  biometricType         String?          @default("face") // "face" or "fingerprint"
  fingerprintCredential String?          // WebAuthn credential ID
  fingerprintPublicKey  String?          // Public key for verification
  governmentRecord      GovernmentRecord @relation(fields: [documentNumber], references: [documentNumber])
  votes                 Vote[]
  sessions              Session[]
}

model Session {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model Election {
  id          String      @id @default(uuid())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  candidates  Candidate[]
  votes       Vote[]
}

model Candidate {
  id         String   @id @default(uuid())
  name       String
  party      String
  symbol     String   @default("üèõÔ∏è")
  photoUrl   String?
  electionId String
  election   Election @relation(fields: [electionId], references: [id])
  votes      Vote[]
}

model Vote {
  id                String    @id @default(uuid())
  userId            String
  candidateId       String
  electionId        String
  ipAddress         String
  deviceFingerprint String?
  votedAt           DateTime  @default(now())
  candidate         Candidate @relation(fields: [candidateId], references: [id])
  election          Election  @relation(fields: [electionId], references: [id])
  user              User      @relation(fields: [userId], references: [id])

  @@unique([userId, electionId])
  // @@unique([ipAddress, electionId]) // Disabled for local testing (multiple users on same IP)
}

