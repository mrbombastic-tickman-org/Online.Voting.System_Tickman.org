# Database
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Security
# Generate a secure random 32+ character secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET_KEY="CHANGE_THIS_TO_A_SECURE_RANDOM_32_PLUS_CHARACTER_SECRET_KEY"

# Admin emails (comma-separated)
ADMIN_EMAILS="admin@example.com"

# Face++ API credentials (required for face verification)
FACEPLUSPLUS_API_KEY="your-faceplusplus-api-key"
FACEPLUSPLUS_API_SECRET="your-faceplusplus-api-secret"

# Public origin used for WebAuthn origin checks in production
# Example: APP_ORIGIN="https://votesecure.example.com"
APP_ORIGIN="http://localhost:3000"

# Trusted proxy IPs for production (comma-separated)
# Required when behind a reverse proxy like nginx, Cloudflare, etc.
# TRUSTED_PROXIES="10.0.0.1,192.168.1.1"

# Environment
NODE_ENV="production"
